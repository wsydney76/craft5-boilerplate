{# The html <head> section #}
{# @param entry Entry #}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {# The siteSettings single entry is always available in templates, see 'preloadSingles' config setting. #}
    <title>{{ entry.title }} | {{ siteSettings.siteName }} </title>

    {# Load JavaScript/CSS files generated by Vite build chain #}
    {{ craft.vite.script("/resources/js/app.js", false) }}

    {# Avoid flickering #}
    {# https://alpinejs.dev/directives/cloak #}
    <style>
        [x-cloak] { display: none !important; }
    </style>

    {# SEO content is typically inserted here by SEO plugins #}
    
</head>