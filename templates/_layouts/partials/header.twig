{# The header body section #}
{# @param entry Entry #}
{# @param featuredImage Asset|null #}

<header class="mb-8 max-w-(--breakpoint-lg) mx-auto pt-8">

    {# The nav bar #}
    {% include '_layouts/partials/nav.twig' with {
        entry
    } only %}

    {# Render featured image, if present in the entry's field layout, or provided as param #}
    {% if featuredImage is defined or entry.featuredImage %}
        {% include '_partials/featured-image.twig' with {
            image: featuredImage ?? entry.featuredImage.one ?? null
        } only %}
    {% endif %}

</header>
